# API Keys for OpenRouter (required for AI agents)
OPENROUTER_API_KEY_RECOMMENDATION=sk-or-your-recommendation-key
OPENROUTER_API_KEY_REFLECTION=sk-or-your-reflection-key
OPENROUTER_API_KEY_CODING=sk-or-your-coding-key  # Used for Google Gemini 2.5 Pro

# Optional GitHub configuration
GITHUB_TOKEN=your_github_token_here

# Optional Configuration
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Notification service settings (Pushover)
PUSHOVER_TOKEN=your_pushover_token_here
PUSHOVER_USER=your_pushover_user_key_here

# Notification settings
NOTIFICATION_ENABLED=true
INACTIVITY_TIMEOUT_MINUTES=3

# Cursor paths (optional - will auto-detect if not specified)
CURSOR_EXECUTABLE_PATH=
CURSOR_DATA_PATH=

# AI agent settings
AI_RECOMMENDATIONS_ENABLED=true
AI_RECOMMENDATION_INTERVAL_MINUTES=30
NOTIFICATION_INTERVAL_MINUTES=30
INACTIVITY_THRESHOLD_MINUTES=3

# Watch directories (comma-separated)
WATCH_DIRECTORIES=

# Auto-change settings
AUTO_ACCEPT_CHANGES=true
AUTO_BYPASS_CONTINUE=true

# Logging settings
LOG_LEVEL=INFO
LOG_FILE=cursor_automation.log

# API Keys
# ------------------------------
# OpenRouter API key for accessing AI models (required for AI notifications)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Pushover Notification Service (optional, but recommended)
PUSHOVER_TOKEN=your_pushover_token_here
PUSHOVER_USER=your_pushover_user_key_here

# Configuration Settings
# ------------------------------
# Preferred AI model to use (defaults to google/gemini-2.5-pro-preview-03-25)
# See https://openrouter.ai/docs for available models
AI_MODEL=google/gemini-2.5-pro-preview-03-25

# Minutes of inactivity before showing notification (default: 3)
INACTIVITY_TIMEOUT_MINUTES=3

# How frequently AI should generate recommendations, in minutes (default: 30)
AI_RECOMMENDATION_INTERVAL_MINUTES=30

# Logging settings (optional)
# ------------------------------
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=cursor_ai.log 